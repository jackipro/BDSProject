@model IEnumerable<WebApplication3.Models.Full_Contract>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div id="content">
	<h1 style="text-align:center;margin: 60px; font-weight:bold; color: #2424FF">Quản Lý danh sách hợp đồng thanh toán</h1>
	<!-- Begin Page Content -->
	<div class="container-fluid">

		<!-- Page Heading -->
		<h1 class="h3 mb-2 text-gray-800" style="text-align:center">Danh sách hợp đồng thanh toán</h1>
		<p class="mb-4">Đây là danh sách các hợp đồng bất động sản thanh toán một lần, hãy thực hiện các thao tác như xóa, chỉnh sửa và cập nhật cho từng hợp đồng của khách hàng ở cột thanh toán.</p>

		<!-- DataTales Example -->
		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Danh sách các hợp đồng</h6>
			</div>
			<p style="margin-left:30px">
				@Html.ActionLink("Nhấn vào đây để tạo mới một hợp đồng", "Create")
			</p>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.FullContractCode)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CustomerName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.YearOfBirth)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.SSN)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CustomerAddress)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Mobile)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.DateOfContract)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Price)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Deposit)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Remain)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Status)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Property.PropertyCode)
								</th>
								<th></th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.FullContractCode)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CustomerName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.YearOfBirth)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.SSN)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CustomerAddress)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Mobile)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.DateOfContract)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Price)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Deposit)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Remain)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Status)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Property.PropertyCode)
								</th>
								<th></th>
							</tr>
						</tfoot>
						<tbody>
							@foreach (var item in Model)
							{
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.FullContractCode)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.CustomerName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.YearOfBirth)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.SSN)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.CustomerAddress)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Mobile)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.DateOfContract)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Price)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Deposit)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Remain)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Status)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Property.PropertyCode)
								</td>
								<td>
									@Html.ActionLink("Update", "Edit", new { id = item.ID }) |
									@Html.ActionLink("Details", "Details", new { id = item.ID }) |
									@Html.ActionLink("Delete", "Delete", new { id = item.ID })
								</td>
							</tr>
							}


						</tbody>
					</table>
				</div>
			</div>
		</div>

	</div>
	<!-- /.container-fluid -->



