@model IEnumerable<WebApplication3.Models.Property>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="content">
	<h1 style="text-align:center;margin: 60px; font-weight:bold; color: #2424FF">Quản Lý Bất Động Sản</h1>
	<!-- Begin Page Content -->
	<div class="container-fluid">

		<!-- Page Heading -->
		<h1 class="h3 mb-2 text-gray-800" style="text-align:center">Danh sách BĐS</h1>
		<p class="mb-4">Đây là danh sách các bất động sản hiện đang có trong cơ sở dữ liệu, bạn có thể thực hiện các thao tác như là xóa, chỉnh sửa và cập nhật cho từng bất động sản ở cột thao tác.</p>

		<!-- DataTales Example -->
		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Danh sách các Bất Động Sản</h6>
			</div>
			<p style="margin-left:30px">
				@Html.ActionLink("Nhấn vào đây để tạo mới một bất động sản", "Create")
			</p>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
						<thead>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.PropertyName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Description)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Address)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Area)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.BedRoom)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.BathRoom)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Price)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.InstallmentRate)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Avatar)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Album)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.District.DistrictName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Property_Status.PropertyStatusName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Property_Type.PropertyTypeName)
								</th>
								<th>
									Thao tác
								</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<th>
									@Html.DisplayNameFor(model => model.PropertyName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Description)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Address)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Area)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.BedRoom)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.BathRoom)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Price)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.InstallmentRate)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Avatar)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Album)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.District.DistrictName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Property_Status.PropertyStatusName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.Property_Type.PropertyTypeName)
								</th>

							</tr>
						</tfoot>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.PropertyName)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Description)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Address)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Area)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.BedRoom)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.BathRoom)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Price)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.InstallmentRate)
									</td>
									<td>
										<img src="~/Images/@item.Avatar" style="width: 300px" />
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Album)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.District.DistrictName)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Property_Status.PropertyStatusName)


									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Property_Type.PropertyTypeName)
									</td>
									<td>
										@Html.ActionLink("Update", "Edit", new { id = item.ID }) |
										@Html.ActionLink("Details", "Details", new { id = item.ID }) |
										@Html.ActionLink("Delete", "Delete", new { id = item.ID })
									</td>

								</tr>
							}


						</tbody>
					</table>
				</div>
			</div>
		</div>

	</div>
	<!-- /.container-fluid -->


